<Window x:Class="FactoryAutomation.Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactoryAutomation.Designer" 
        xmlns:wpf="clr-namespace:FactoryAutomation.WPF;assembly=FactoryAutomation.WPF"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None" d:Width="1920" d:Height="1080">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <wpf:PropertyGrid Grid.Row="1" KeyColumnWidth="200" ValueColumnWidth="1*" SelectedObject="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType=local:MainWindow, Mode=FindAncestor}}"></wpf:PropertyGrid>
    </Grid>
</Window>
